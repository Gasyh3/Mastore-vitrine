// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection poolings
}

model Post {
  id        String     @default(cuid()) @id
  title     String
  content   String?
  imgUrls   String[]
  url       String
  published Boolean @default(false)
  authorId  String?
}
model Admin {
  id Int @default(autoincrement()) @id
  email String @unique
  password String
  createdAt DateTime @default(now())
}
